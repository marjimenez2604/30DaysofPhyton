#Script 9 longitud de cadena y valores falsy
long_palabra1 = len('python')
print('La longitud de python es: ', long_palabra1)
long_palabra2 = len('dragon')
print('La longitud de dragon es: ', long_palabra2)
print('Ejemplo de declaracion de comparacion falsa: ' , long_palabra1 != long_palabra2)

#Script 10 uso operador AND
valor = 'on' in 'python' and 'on' in 'dragon'
if valor == True: 
   print('On se encuentra en ambas palabras')
else : 
   print('On no se encuentra en ambas palabras')

